@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <h2 class="text-center mb-4">Register Grade</h2>
    <form id="gradeForm">
        <div class="form-group">
            <label>Enrollment</label>
            <select class="form-control" id="enrollmentId" required>
                <option value="">-- Select --</option>
            </select>
        </div>
        <div class="form-group">
            <label>Grade Type</label>
            <input type="text" class="form-control" id="gradeType" required />
        </div>
        <div class="form-group">
            <label>Grade Value</label>
            <input type="number" class="form-control" id="gradeValue" min="0" max="100" step="0.01" required />
        </div>
        <div class="form-group">
            <label>Date</label>
            <input type="date" class="form-control" id="gradeDate" required />
        </div>
        <button type="button" class="btn btn-success" onclick="submitGrade()">Submit</button>
    </form>
</div>

<script src="~/js/grades.js"></script>