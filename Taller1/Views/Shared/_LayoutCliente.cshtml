                                <a asp-controller="Estadisticas" asp-action="Tarjetas" class="dropdown-item">Tarjetas</a>
                                <a asp-controller="Estadisticas" asp-action="Reglamento" class="dropdown-item">Reglamento</a>
                                <a asp-controller="Estadisticas" asp-action="Resultados" class="dropdown-item">Resultados</a>
                                <a asp-controller="Main" asp-action="GalardonPremios" class="dropdown-item">Premios y Campeones</a>
                            </div>
                        </div>
                        
                    </div>

                    <div class="d-flex align-items-center">
