<style>
    .card-estadistica {
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
        cursor: pointer;
    }

        .card-estadistica:hover {
            transform: scale(1.03);
        }

    .icono-estadistica {
        font-size: 3rem;
        margin-bottom: 15px;
        transition: transform 0.3s;
    }

    .card-estadistica:hover .icono-estadistica {
        transform: scale(1.2);
    }

    .estadisticas-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 2rem;
    }
    .galardones-section {
    background: linear-gradient(to right, #f8f9fa, #ffffff);
}
/* Contenedor general con bordes redondeados */
.galardones-section {
    background: linear-gradient(to right, #f8f9fa, #ffffff);
    border-radius: 20px;
    padding: 2rem;
}

/* Títulos estilizados */
.galardones-section h2,
.galardones-section h3 {
    font-weight: 700;
    color: #2c3e50;
}
.card-general{
    transition: transform 0.3s ease;
    border: 2px solid #28a74520;
}
/* Estilo para cada tarjeta de premio */
.card-premio {
    transition: transform 0.3s ease;
    border-radius: 15px;
    min-height: 230px;
    
    border: 2px solid #28a74520;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
}

.card-premio:hover {
    transform: scale(1.05);
}

.card-premio i {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #28a745;
}

/* Galería de campeones */
.card-campeon {
    border-radius: 15px;
    overflow: hidden;
    transition: transform 0.3s ease;
    border: 2px solid #34643420;
}

.card-campeon:hover {
    transform: scale(1.05);
}

.card-campeon img {
    object-fit: cover;
    height: 250px;
    width: 100%;
    border-bottom: 2px solid #28a74540;
}

.equal-height {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
}


</style>

<body>
    
    <!-- Navbar Start -->
    <div class="container-fluid position-relative nav-bar p-0">
        <div class="container-lg position-relative p-0 px-lg-3" style="z-index: 9;">
