<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Panel de Administración</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 4 -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #343a40;
            color: #fff;
            min-height: 100%;
        }

            .sidebar a {
                color: #fff;
                padding: 15px;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    text-decoration: none;
                }

        .topbar {
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
        }

        

        #sidebarCollapse {
            display: none;
        }

        
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="d-flex flex-grow-1">

        <nav id="sidebar" class="sidebar-wrapper bg-dark d-md-block collapse">
            <div class="sidebar p-3">
                <h4 class="text-white mb-4"><i class="fas fa-shield-alt me-2"></i> Admin</h4>
                
                <a asp-controller="Admin" asp-action="Index"> Register a Student</a>
                <a asp-controller="Admin" asp-action="RegisterToCourse"> NRC</a>
                <a asp-controller="Admin" asp-action="Grades"> Grades</a>
                
                
            </div>
        </nav>

        <div class="flex-grow-1">
            

            <div class="p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/usuario.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
